{
  // Configuração correta para o Black Formatter
  "black-formatter.args": ["--line-length", "100"], 
  
  // Otimização: A extensão Pylance/Python é preferida para esta configuração
  "[python]": {
    // Define o formatador padrão como Black
    // "editor.defaultFormatter": "ms-python.black-formatter", 
    "python.formatting.provider": "black", // ✅ Define o Black como formatador
    // Formata o arquivo inteiro ao salvar
    "editor.formatOnSave": true,
    // Opcional: Remove formatOnType para evitar formatação constante
    // "editor.formatOnType": true, 
    // Organiza imports automaticamente (requer Pylance ou Isort)
    "editor.codeActionsOnSave": { 
      "source.organizeImports": "explicit"
    }
  }
}